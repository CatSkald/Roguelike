{
  "version": "0.0.1-*",
  "buildOptions": {
    "emitEntryPoint": true,
    //"copyToOutput": {
    //for some reason the line below does not override file in output directory 
    //if it has changed
    //used postcompile event instead
    //  "includeFiles": [ "configs.json" ]
    //},
    "compile": {
      "includeFiles": [
        "../../CommonAssemblyInfo.cs"
      ]
